doctype 5
html
  head
    if title
      title= title + ' - ' + 'Grade That Course'
    else
      title= 'Grade That Course'
    link(rel='stylesheet', href='/css/bs-btn.css')
    link(rel='stylesheet', href='/css/bs-form.css')
    link(rel='stylesheet', href='/css/bs-label.css')
    link(rel='stylesheet', href='/css/style.min.css')
  body
    header
      .table.content.overflow
        .table-cell
          a(href='/' class='home-title')= 'Grade That Course'
        .text-right.table-cell
          if user
            a(href='/user/' + user.uuid class='header btn btn-default')= user.email
            a(href='/logout' class='header btn btn-default')= 'Log Out'
          else
            a(href='/login' class='header btn btn-default')= 'Log In'
            a(href='/register' class='header btn btn-default')= 'Register'
    .masthead
        .hero.content.text-center
          h1.title= 'Choose better classes, together.'
          h2.subtitle= 'bringing transparency to course reviews - ubc edition'
    .container
      block content
    footer
      include includes/footer
